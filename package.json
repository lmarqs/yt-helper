{
  "name": "yt-helper",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@metamodules/postgres": "^1.2.1",
    "dotenv": "^8.0.0",
    "mime-types": "^2.1.27",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hook-form": "^5.6.0",
    "ytdl": "^1.3.0",
    "ytdl-core": "^2.1.1",
    "ytpl": "^0.1.20"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^13.13.4",
    "@types/pg": "^7.14.3",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "concurrently": "^4.1.0",
    "cross-spawn": "^6.0.5",
    "deploy-node-app": "^1.4.3",
    "eslint-plugin-jest": "^23.8.2",
    "nodemon": "^1.19.1",
    "prettier": "^1.17.1",
    "react-app-rewire-workbox": "^2.0.1",
    "react-app-rewired": "^2.1.5",
    "react-scripts": "^3.4.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.4.5",
    "workbox-webpack-plugin": "^3.0.0"
  },
  "scripts": {
    "start": "node build",
    "start:dev": "bash bin/dev.sh",
    "build:all": "yarn build:api && yarn build:www",
    "build:api": "tsc --project src/api/tsconfig.json --outDir build",
    "build:www": "react-app-rewired build",
    "deploy": "git push heroku master",
    "lint": "eslint . --ext tsx,ts,js",
    "test": "react-app-rewired test",
    "eject-www": "react-app-rewired eject",
    "psql": "export $(cat .env | xargs) && PGPASSWORD=${POSTGRES_PASSWORD} psql -h ${POSTGRES_SERVICE_HOST} -p ${POSTGRES_SERVICE_PORT} -U ${POSTGRES_USER} ${POSTGRES_DB}"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "proxy": "http://localhost:8080",
  "deploy-node-app": {
    "dev": {
      "registry": "",
      "type": "combo",
      "port": 8080,
      "protocol": "http",
      "entrypoint": "src/api/index.ts",
      "isPublic": true
    },
    "prod": {
      "registry": "",
      "type": "combo",
      "port": 8080,
      "protocol": "http",
      "entrypoint": "build/index.js",
      "isPublic": true
    }
  }
}
