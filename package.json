{
  "name": "@lmarqs/yt-helper",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@metamodules/postgres": "^1.2.1",
    "commander": "^6.2.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "ffmpeg-static": "^4.2.7",
    "fluent-ffmpeg": "^2.1.2",
    "mime-types": "^2.1.27",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "sanitize-filename": "^1.6.3",
    "ytdl-core": "^4.0.0",
    "ytpl": "^1.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/ffmpeg-static": "^3.0.0",
    "@types/fluent-ffmpeg": "^2.1.16",
    "@types/jest": "^26.0.15",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^14.14.5",
    "@types/pg": "^7.14.5",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "concurrently": "^5.3.0",
    "cross-spawn": "^7.0.3",
    "deploy-node-app": "^2.2.1",
    "eslint-plugin-jest": "^24.1.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "react-app-rewire-workbox": "^2.0.1",
    "react-app-rewired": "^2.1.5",
    "react-scripts": "^4.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.3",
    "workbox-webpack-plugin": "^3.0.0"
  },
  "scripts": {
    "start": "node build/web",
    "start:dev": "bash bin/dev.sh",
    "prebuild:all": "rm -rf build",
    "build:all": "yarn build:api && yarn build:cli && yarn build:www",
    "build:api": "tsc --project src/api/tsconfig.json --outDir build/web",
    "build:cli": "tsc --project src/cli/tsconfig.json --outDir build/bin/cli",
    "build:www": "react-app-rewired build",
    "deploy": "git push heroku master -f",
    "lint": "eslint . --ext tsx,ts,js",
    "test": "react-app-rewired test",
    "eject-www": "react-app-rewired eject",
    "psql": "export $(cat .env | xargs) && PGPASSWORD=${POSTGRES_PASSWORD} psql -h ${POSTGRES_SERVICE_HOST} -p ${POSTGRES_SERVICE_PORT} -U ${POSTGRES_USER} ${POSTGRES_DB}"
  },
  "bin": {
    "yth": "bin/cli"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "proxy": "http://localhost:8080",
  "deploy-node-app": {
    "dev": {
      "registry": "",
      "type": "combo",
      "port": 8080,
      "protocol": "http",
      "entrypoint": "src/api/index.ts",
      "isPublic": true
    },
    "prod": {
      "registry": "",
      "type": "combo",
      "port": 8080,
      "protocol": "http",
      "entrypoint": "build/index.js",
      "isPublic": true
    }
  }
}
